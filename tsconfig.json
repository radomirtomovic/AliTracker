{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "declaration": false,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "react"
  },
  "include": [
    "resources/ts/**/*"
  ]
}