{% extends '_template.twig' %}


{% block body %}
   <div class="container" style="margin-top: 2rem;">
       <div class="row mar">
           <form class="col s12" action="/register" method="post">
               <div class="row">
                   <div class="input-field col s12">
                       <input id="first_name" type="text" name="name" class="validate">
                       <label for="first_name">First Name</label>
                   </div>
               </div>
               <div class="row">
                   <div class="input-field col s12">
                       <input id="last_name" type="text" name="surname" class="validate">
                       <label for="last_name">Last Name</label>
                   </div>
               </div>
               <div class="row">
                   <div class="input-field col s12">
                       <input id="email" type="email" name="email" class="validate">
                       <label for="email">Email</label>
                   </div>
               </div>
               <div class="row">
                   <div class="input-field col s12">
                       <input id="password" type="password" name="password" class="validate">
                       <label for="password">Password</label>
                   </div>
               </div>
               <div class="row">
                   <div class="input-field col s12">
                       <input id="password" type="password" name="password_confirmation" class="validate">
                       <label for="password">Password Confirmation</label>
                   </div>
               </div>
               <button class="btn waves-effect waves-light" type="submit" name="action">
                   Register
               </button>
           </form>
       </div>
   </div>
{% endblock %}
